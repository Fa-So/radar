{{#each breadcrumbs}}
<li {{action "treeView.clickBreadcrumb"}} class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{name}}</a>
  <ul class="dropdown-menu tree-nav">
    {{#each childNodes}}
    {{view Radar.NodeView itemBinding="this" tagName="li" displayNameBinding="name"}}
    {{/each}}
    {{#if childStates}}
    <li class="divider"></li>
    {{#each childStates}}
      {{view Radar.LeafView itemBinding="this" tagName="li" displayNameBinding="name"}}
    {{/each}}
    {{/if}}
    {{#if childMethods}}
    <li class="divider"></li>
    {{#each childMethods}}
    {{view Radar.LeafView itemBinding="this" tagName="li" displayNameBinding="name"}}
    {{/each}}
    {{/if}}
  </ul>        
</li> 
{{/each}}

